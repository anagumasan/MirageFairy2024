{
  "schemaVersion": 1,
  "id": "miragefairy2024",
  "version": "${version}",
  "name": "MirageFairy2024",
  "description": "MirageFairy2024: The Minecraft MOD for the MirageFairy project in 2024.",
  "authors": [
    "夜のかけら"
  ],
  "contact": {
    "homepage": "https://miragefairy.notion.site/",
    "sources": "https://github.com/MirageFairy/MirageFairy2024"
  },
  "license": "Apache License 2.0",
  "icon": "assets/miragefairy2024/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "value": "miragefairy2024.MirageFairy2024",
        "adapter": "kotlin"
      }
    ],
    "client": [
      {
        "value": "miragefairy2024.MirageFairy2024Client",
        "adapter": "kotlin"
      }
    ],
    "fabric-datagen": [
      {
        "value": "miragefairy2024.MirageFairy2024DataGenerator",
        "adapter": "kotlin"
      }
    ],
    "rei_server": [
      {
        "value": "miragefairy2024.MirageFairy2024ReiServerPlugin",
        "adapter": "kotlin"
      }
    ],
    "rei_client": [
      {
        "value": "miragefairy2024.MirageFairy2024ReiClientPlugin",
        "adapter": "kotlin"
      }
    ]
  },
  "mixins": [
    "miragefairy2024.mixins.json",
    {
      "config": "miragefairy2024.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=0.14.24",
    "minecraft": "~1.20.2",
    "java": ">=17",
    "fabric-api": "*",
    "fabric-language-kotlin": ">=1.9.20"
  },
  "suggests": {
    "another-mod": "*"
  }
}
